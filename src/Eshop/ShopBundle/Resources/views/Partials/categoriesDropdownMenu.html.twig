{% trans_default_domain 'shop' %}
{% for mainCat in mainCategories %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
           aria-expanded="true">{{ mainCat.name|trans }} <span class="caret"></span>
        </a>
        <ul class="dropdown dropdown-menu">
            {% for subCat in subCategories if mainCat.id == subCat.parent.id %} 
                <li>
                    <a href="{{ path('category', {'slug' : subCat.slug}) }}">
                        {{ subCat.name|trans }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </li> 
{% endfor %}