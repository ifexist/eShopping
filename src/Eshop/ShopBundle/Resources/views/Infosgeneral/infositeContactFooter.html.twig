{% trans_default_domain 'shop' %}
{% if cntIfgSiteContactFooter > 0 %}
    {% if ifgSiteContactFooter.contactservice1 != "" or ifgSiteContactFooter.contactservice2 != "" or ifgSiteContactFooter.contactservice3 != "" %}
        <h4>{{ 'Contact-us'|trans }}</h4>
    {% endif %}
