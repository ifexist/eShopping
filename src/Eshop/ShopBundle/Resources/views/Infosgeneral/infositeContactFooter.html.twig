                        <i class="fa fa-envelope"></i> {{ ifgSiteContactFooter.emailservice1 }}
                    </div>
                {% endif %}
                {% if ifgSiteContactFooter.phoneservice1 != "" %}
                    <div class="text-danger">
                        <i class="fa fa-phone"></i> {{ ifgSiteContactFooter.phoneservice1 }}
