{% trans_default_domain 'contact' %}
    <body bgcolor="#FFFFFF">
        <div class="container">
            <div class="col-md-1"></div>
            <div class="col-md-10 well">
                <div class="col-md-12 text-center">
                    <a href="http://{{ app.request.getSchemeAndHttpHost() }}">
                        {% if file_exists(app.request.server.get('DOCUMENT_ROOT') ~  '/site/images/logo.png') %}
                            <div class="col-md-6">
                                <img src="{{ asset('site/images/logo.png') }}" width="40%" style="background: #fff;">
                            </div>
                            <div class="col-md-6">
                                <h4>{{ app.request.getSchemeAndHttpHost() }}</h4>
                            </div>
                        {% else %}
                            <h4>{{ app.request.getSchemeAndHttpHost() }}</h4>
                        {% endif %}
                    </a>
                </div> 
            </div>
            <div class="col-md-1"></div>
        </div>     
    <!-- HEADER -->
    
        <div class="container">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <h4>{{ quotation.title|capitalize }} {{ quotation.firstname|capitalize }} {{ quotation.lastname|upper }}</h4>
                <h6>{{ 'Free quote request with the following information'|trans }}</h6>
                <div class="row">
                    <div class="col-md-12">
                        {% if quotation.namets != "" %}
                            {{ 'Company'|trans }} : {{ quotation.namets|upper }}<br>
                        {% endif %}    
                        {% if quotation.phone != "" %}
                            {{ 'Phone'|trans }} : {{ quotation.phone }}<br>
                        {% endif %}    
                        {% if quotation.zipcode != "" %}
                            {{ quotation.zipcode }}, 
                        {% endif %}   
                        {% if quotation.city != "" %}
                            {{ quotation.city }}, 
                        {% endif %}    
                        {% if quotation.country != "" %}
                            {{ quotation.country }}<br>
                        {% endif %}  
                        {% if quotation.web != "" %}
                            {{ 'Website'|trans }} : <a href="{{ quotation.web }}">{{ quotation.web }}</a>
                        {% endif %}    
                    </div>
                </div>
                    
                <div class="row">
                    <div class="col-md-4">
                        {{ 'Type and language of site'|trans }}
                    </div>
                    <div class="col-md-8">
                        {{ quotation.typesite|capitalize }} ({{ quotation.lang|upper }})
                    </div>
                </div>
                    
                <div class="row">
                    <div class="col-md-4">
                        {{ 'Budget'|trans }}
                    </div>
                    <div class="col-md-8">
                        {{ quotation.budget }} {{ quotation.currency|upper }}
                    </div>
                </div>
            {% if quotation.webmodel != "" %}    
                <div class="row">
                    <div class="col-md-4">
                        {{ 'On the model of'|trans }}
                    </div>
                    <div class="col-md-8">
                        <a href="{{ quotation.webmodel }}">{{ quotation.webmodel }}</a>
                    </div>
                </div>  
            {% endif %} 
              
                <div class="row">
                    <div class="col-md-12">
                        <p>{{ 'More on this project'|trans }}</p>
                        <p>{{ quotation.project }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
        </div>