{% extends '@Admin/adminLayout.html.twig' %}
{% trans_default_domain 'admin' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/shop/fancybox/jquery.fancybox.css') }}" media="all" rel="stylesheet"
          type="text/css"/>
{% endblock stylesheets %}

{% block page_content -%}
    <h3>{{ 'prdouct color'|trans }}</h3>
    <div class="btn-group">
        <a href="{{ path('admin_prodcolor') }}" class="btn btn-default">{{ 'Back to the list'|trans }}</a>
        {#<a href="{{ path('admin_prodcolor_new') }}" class="btn btn-default">{{ 'add'|trans }}</a>#}
    </div>

    <table class="table table-bordered">
        <tr>
            <th width="30%">{{ 'Enable'|trans }}</th>
            <td width="70%">{% if entity.enable == 1 %}{{ 'Yes'|trans }}{% else %}{{ 'No'|trans }}{% endif %}</td>
        </tr>
        <tr>
            <th>{{ 'Title'|trans }}</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>{{ 'Name'|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ 'RGB color code'|trans }}</th>
            <td>{{ entity.code1 }} <span class="badge badge-succes" style="background:rgba({{ entity.code1 }}, 1);">&nbsp;</span></td>
        </tr>
        <tr>
            <th>{{ 'HEX color code'|trans }}</th>
            <td>{{ entity.code2 }} <span class="badge badge-succes" style="background:{{ entity.code2 }};">&nbsp;</span></td>
        </tr>
    </table>
{% endblock page_content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/shop/fancybox/jquery.mousewheel-3.0.6.pack.js') }}"
            type="text/javascript"></script>
    <script src="{{ asset('bundles/shop/fancybox/jquery.fancybox.pack.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $(".fancybox").fancybox();

            $('.delete-form').submit(function (e) {
                var currentForm = this;
                e.preventDefault();
                bootbox.confirm("{{ 'Are you sure'|trans }}?", function (result) {
                    if (result) {
                        currentForm.submit();
                    }
                });
            });
        });
    </script>
{% endblock javascripts %}
