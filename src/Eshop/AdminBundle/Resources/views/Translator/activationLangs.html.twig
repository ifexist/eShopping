{% extends '@Admin/adminLayout.html.twig' %}
{% trans_default_domain 'admin' %}
{% block title %}{{ 'Languages Status'|trans|capitalize }}{% endblock%}
{% block page_content -%}
    <div class="col-md-12">
        <h2 class="text-center">{{ 'Languages Status'|trans|capitalize }} <a href="{{ path('admin_translator_trans') }}" class="btn btn-default"><i class="fa fa-language"></i> {{ 'Translator'|trans }}</a></h2>
        <div class="col-md-12">
            <h4 class="text-center">{{ 'Yes'|trans|upper }} = {{ 'Enable'|trans|capitalize }}, {{ 'No'|trans|upper }} = {{ 'Disable'|trans|capitalize }}</h4>
                
            {% for oneLng in allLangs %}
                <div class="col-md-3" style="border:#eee solid 1px;">
                    <form action="{{ path('admin_langs_activation') }}" method="post">
                        <input type="hidden" name="idLang" value="{{ oneLng.id }}">
                        <div class="col-md-4">
                            <div class="row">
                                <a title="{{ oneLng.langen }} - {{ oneLng.lang }}">{{ oneLng.code|upper }}</a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                {{ 'Yes'|trans|upper }}  <input type="radio" name="enable" value="1"{% if oneLng.enable == 1 %} checked="checked"{% endif %} onchange="this.form.submit();"  />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                {{ 'No'|trans|upper }} <input type="radio" name="enable" value="0"{% if oneLng.enable == 0 %} checked="checked"{% endif %} onchange="this.form.submit();"  />
                            </div>
                        </div>
                    </form>
                </div>
            {% endfor %}
        </div>
    {% endblock page_content -%}