{% extends '@Admin/adminLayout.html.twig' %}
{% trans_default_domain 'admin' %}

{% block title %}
    {{ 'Static pages'|trans }} - {{ 'Administration panel'|trans }}
{% endblock title %}

{% block page_content -%}
    <h3>{{ 'Static pages'|trans }}</h3>

    <div class="btn-group-xs">
        <a href="{{ path('admin_staticpage_new') }}" class="btn btn-default">{{ 'Create a new page'|trans }}</a>
    </div>
    <table class="records_list table table-striped">
        <thead>
        <tr>
            <th class="col-md-5">{{ 'Title'|trans }}</th>
            <th class="col-md-2">{{ 'Page order'|trans }}</th>
            <th class="col-md-2">{{ 'Enabled'|trans }}</th>
            <th class="col-md-3">{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                        <a href="{{ path('admin_staticpage_show', { 'id': entity.id }) }}" title="{{ 'show'|trans }} {{ entity.title }}">{{ entity.title }}</a>
                </td>
                <td>
                    {{ entity.orderNum }}
                </td>
                <td>
                    {% if entity.enabled %}
                        {{ 'yes'|trans }}
                    {% else %}
                        {{ 'no'|trans }}
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group-xs">
                        <a href="{{ path('admin_staticpage_show', { 'id': entity.id }) }}" class="btn btn-default" title="{{ 'show'|trans }}"><i class="fa fa-eye"></i></a>
                        <a href="{{ path('admin_staticpage_edit', { 'id': entity.id }) }}" class="btn btn-primary" title="{{ 'edit'|trans }}"><i class="fa fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock page_content %}
