{% extends '@Admin/adminLayout.html.twig' %}
{% trans_default_domain 'admin' %}
{% block page_content -%}
    <h3>{{ 'Static page'|trans }}</h3>
    <div class="btn-group-xs">
        <a href="{{ path('admin_staticpage') }}" class="btn btn-default">{{ 'Back to the list'|trans }}</a>
        <a href="{{ path('admin_staticpage_edit', { 'id': entity.id }) }}" class="btn btn-primary">{{ 'Edit'|trans }}</a>
        <a href="{{ path('admin_staticpage_new') }}" class="btn btn-info">{{ 'Add'|trans }}</a>
    </div>
        </li>
    <table class="record_properties table table-bordered table-striped">
        <tbody>
        <tr>
            <th width="20%">{{ 'Title'|trans }}</th>
            <td width="80%">{{ entity.title }}</td>
        </tr>
        <tr>
            <th>{{ 'Enabled'|trans }}</th>
            <td>
                {% if entity.enabled %}
                    {{ 'yes'|trans }}
                {% else %}
                    {{ 'no'|trans }}
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>{{ 'Slug'|trans }}</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>{{ 'Page order'|trans }}</th>
            <td>{{ entity.orderNum }}</td>
        </tr>
        <tr>
            <th>{{ 'Meta keys'|trans }}</th>
            <td>
                <i class="btn btn-xs btn-info"><b>{{ entity.metaKeys|replace({',':'</b></i> <i class="btn btn-xs btn-info"><b>'})|raw }}
            </td>
        </tr>
        <tr>
            <th>{{ 'Meta description'|trans }}</th>
            <td>{{ entity.metaDescription }}</td>
        </tr>
        <tr>
            <th>{{ 'Content'|trans }}</th>
            <td>
                {{ entity.content|rawdescr|nl2br }}
            </td>
        </tr>
        </tbody>
    </table>
    <div class="col-md-6 col-md-offset-4 ">
        <ul class="list-group">
            <li class="list-group-item">
                {% include "@Admin/Partials/Includes/Modals/deleteConfirm.html.twig" %}
                {{ form_start(delete_form) }}
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#confirmDelete" data-title="{{ 'Delete'|trans }} {{ entity.title }}" data-message="{{ 'Are you sure to delete this data'|trans }} ?">
                    <i class="fa fa-trash"></i> {{ 'Delete'|trans }}
                </button>
                    &nbsp;&nbsp;<span class="text-danger"><strong>{{ 'Warning'|trans }} !</strong> {{ 'Removing these data will be irreversible'|trans }}.</span>
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>


{% endblock page_content %}
