{% extends '@Admin/adminLayout.html.twig' %}
{% trans_default_domain 'admin' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/shop/fancybox/jquery.fancybox.css') }}" media="all" rel="stylesheet"
          type="text/css"/>
{% endblock stylesheets %}

{% block title %}
    {{ 'Prdouct exist in list'|trans }} - {{ 'Administration panel'|trans }}
{% endblock title %}

{% block page_content -%}
    <h3>{{ 'Prdouct exist in list'|trans }}</h3>
    <table class="records_list table table-striped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(entities, 'Enable'|trans, 'c.enable') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Name'|trans, 'c.name') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'The corresponding values'|trans, 'c.fieldtype') }}</th>
            <th class="col-md-1">{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    {% if entity.enable == 1 %}{{ 'Yes'|trans }}{% else %}{{ 'No'|trans }}{% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_prodexistin_show', { 'id': entity.id }) }}">{{ entity.name }}</a>
                </td>
                <td>
                    {{ entity.fieldtype }}
                </td>
                <td>
                    <div class="btn-group-xs">
                        <a href="{{ path('admin_prodexistin_show', { 'id': entity.id }) }}" class="btn btn-default" title="{{ 'show'|trans }}"><i class="fa fa-eye"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-12">
            {{ knp_pagination_render(entities) }}
        </div>
    </div>
{% endblock page_content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/shop/fancybox/jquery.mousewheel-3.0.6.pack.js') }}"
            type="text/javascript"></script>
    <script src="{{ asset('bundles/shop/fancybox/jquery.fancybox.pack.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $(".fancybox").fancybox();
        });
    </script>
{% endblock javascripts %}
