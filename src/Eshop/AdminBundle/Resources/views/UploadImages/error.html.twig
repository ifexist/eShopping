{% extends '@Admin/adminLayout.html.twig' %}
{% trans_default_domain 'admin' %}

{% block page_content -%}
    <h3>Oops {{ 'An error is occured'|trans }}!</h3>
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p>
            <h4>{{ 'Important'|trans }}.</h4><br>
                {{ 'You tried to upload a image file without passing through the appropriate module'|trans }}. 
                {{ 'Know that you can not access to this page directly'|trans }}. <br><br>
                <span class="btn btn-succes fa fa-hand-o-left fa-lg"></span>  {{ 'Please, for each operation use always the left menu'|trans }}.
        </p>
    </div>
{% endblock page_content %}
